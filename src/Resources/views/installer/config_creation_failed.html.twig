{% extends 'installer/base.html.twig' %}

{% block content %}
    <p>
        {{ 'Sorry, but I can&#8217;t write the %s file.' | trans | format('<code>' ~ config_file ~ '</code>') | raw }}
    </p>
    <p>
        {{ 'You can create the %s manually and paste the following text into it.' | trans | format('<code>' ~ config_file ~ '</code>') | raw }}
    </p>
    <textarea id="wp-config" cols="98" rows="15" class="code" readonly="readonly">
        {{- parameters_data -}}
    </textarea>
    <p>{{ 'After you&#8217;ve done that, click &#8220;Run the install.&#8221;' | trans | raw }}</p>

    <p class="step">
        <a href="{{ install_link }}" class="button button-large">{{ 'Run the install' | trans | raw }}</a></p>

    <script>
        (function () {
            if (!/iPad|iPod|iPhone/.test(navigator.userAgent)) {
                var el = document.getElementById('wp-config');
                el.focus();
                el.select();
            }
        })();
    </script>
{% endblock %}